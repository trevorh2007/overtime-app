<div class='container-fluid'>
	<div class='pending-homepage row'>
		<div class='homepage-block'>
		<% if current_user.audit_logs.pending.any? %>
			<h3 id='pending-approval'>Pending Your Confirmation</h3>

			<%= render partial: 'pending_audit_confirmations', locals: { pending_audit_confirmations: @pending_audit_confirmations } %>
		</div>
		<% else %>
			<div class='homepage-block'>
				<h3 id='pending-approval'>Hooray! You have already confirmed your overtime!</h3>
			</div>
		<% end %>

		<div class='homepage-block'>
			<h3 id='pending-approval'>Request Overtime</h3>
			<%= link_to 'New Overtime Request', new_post_path, class: 'btn btn-lg btn-primary btn-block' %>
		</div>

			<div class='recent-pending row'>
				<h3 id='item-approval'>Recent Requests and Status</h3>
				<hr>
					<%= render partial: 'pending_approval_employee', locals: { pending_approvals: @pending_approvals } %>
			</div>

	</div>
</div>