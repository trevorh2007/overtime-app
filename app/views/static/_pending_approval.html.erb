<% pending_approvals.each do |pending_approval| %>
	<div class='homepage-block col-md-5'>
		<h4>
		<%= pending_approval.user.full_name %>
		</h4>

		<h5>
		<span class='pending-details'>Submitted:</span> <%= pending_approval.created_at.strftime("%a %b %d") %>, <%= pending_approval.created_at.strftime("%r") %>
		</h5>

		<h5>
		<span class='pending-details'>Rationale:</span> <%= truncate pending_approval.rationale, length: 100 %>
		</h5>

		<div class='row'>
			<div class='col-md-6 column'>
				<%= link_to 'Approve', approve_post_path(pending_approval), class: 'btn btn-primary btn-block', id: "approve_#{pending_approval.id}" %>
			</div>

			<div class='col-md-6 column'>
				<%= link_to 'Review', edit_post_path(pending_approval), class: 'btn btn-danger btn-block' %>
			</div>
		</div>
	</div>
<% end %>