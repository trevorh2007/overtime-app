	<div class='pending-homepage row'>
		<h2 id='item-approval'>Recently Confirmed Log</h2>
		<hr>

		<%= render partial: 'recent_confirmed_audit_items', locals: { recent_confirmed_audit_items: @recent_confirmed_audit_items } %>

