<div class='container-fluid'>
	<div class='pending-homepage row'>
	<h2 id='item-approval'>Items Pending Your Approval</h2>
	<hr>
		<%= render partial: 'pending_approval', locals: { pending_approvals: @pending_approvals } %>
	</div>

	<div class='pending-homepage row'>
		<h2 id='item-approval'>Pending Confirmation Log</h2>
		<hr>

		<%= render partial: 'confirmation_log', locals: { recent_audit_items: @recent_audit_items } %>

		<div class='clearfix'></div>
		<hr>

		<%= link_to 'View All Audit Items', audit_logs_path, class: 'btn btn-primary btn-float-right' %>
