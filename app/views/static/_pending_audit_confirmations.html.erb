<% pending_audit_confirmations.each do |pending_audit_confirmation| %>
	<%= link_to "I did not perform any overtime for the week #{pending_audit_confirmation.start_date.strftime("%a %b %d")} - #{(pending_audit_confirmation.start_date. + 6.days).strftime("%a %b %d")}", confirm_audit_log_path(pending_audit_confirmation), class: 'btn btn-lg btn-primary btn-block', id: "confirm_#{pending_audit_confirmation.id}", data: { confirm: "Are you sure you want to confirm you did not perform any overtime for the week starting #{pending_audit_confirmation.start_date.strftime("%b %d")}?"} %>
<% end %>