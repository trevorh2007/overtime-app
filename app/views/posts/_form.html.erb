<%= form_for @post, class: "form-horizontal card" do |f| %>

  <div class="form-group">
    <%= f.label :date, class: "col-md-2 control-label" %> 
    <%= f.date_field :date, class: "form-control" %>  
  </div>

  <div class="form-group">
    <%= f.label :rationale, class: "col-md-2 control-label" %>  
    <%= f.text_area :rationale, class: "form-control" %>  
  </div>

  <%= f.submit 'Save', class: 'btn-lg btn-primary right btn-float-right' %>

<% end %>