<div>
	<h2><%= @post.rationale %></h2>
</div>

<div class="well">
	<div>
		<h3><span>Overtime Amount Requested: </span> <%= @post.overtime_request %></h3>
	</div>

	<div>
		<h3><span>Employee: </span> <%= @post.user.full_name %></h3>
	</div>

	<div>
		<h3><span>Date: </span> <%= @post.date.strftime("%m/%d/%Y") %></h3>
	</div>

	<div>
		<h3><span>Current Stage of Approval: </span> <%= @post.status.capitalize %></h3>
	</div>
</div>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn-lg btn-primary right btn-float-right' if policy(@post).update? %>